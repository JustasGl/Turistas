<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.turistas.dziugonamai"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Džiugo namai"
        android:textSize="55sp"
        android:textAlignment="center"/>
    <View
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyriklis"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kviečia Jus paskanauti kietojo sūrio DŽIUGAS, pyragų, užtepėlių, tortų ir saldainių su sūriu DŽIUGAS, pasimėgauti vyno taure ar skania kava bei pasigrožėti puikiais Masčio ežero peizažais."
        android:textSize="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/juoda"/>
    <View
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyriklis"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kontaktai"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tel. nr. +370-444-53748"
            android:textSize="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/juoda"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Adresas:  Respublikos st. 49 – 7, Telšiai"
            android:textSize="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/juoda"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyriklis"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/telnr"
            android:layout_weight="1"
            android:id="@+id/telefono"
            android:background="?attr/selectableItemBackground"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/skyriklis"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/adresas"
            android:layout_weight="1"
            android:id="@+id/adreso"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/google"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="#ed5564"
            android:scaleType="fitCenter"
            android:src="@drawable/gsearch"
            android:foreground="?attr/selectableItemBackground"/>
    </FrameLayout>
</LinearLayout>
</ScrollView>