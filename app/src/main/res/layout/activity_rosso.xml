<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.turistas.rosso"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Astrum Palace"
        android:textSize="50sp"
        android:textAlignment="center"/>
    <View
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyriklis"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Šiaurės Lietuvoje, Mažeikiuose įsikūręs 4 žvaigždučių viešbutis siūlo numerius su oro kondicionieriais ir dideliais marmuro vonios kambariais. Svečiams siūloma nemokamai naudotis belaidžiu internetu ir automobilių stovėjimo aikštele.

Garsui nepralaidžiuose viešbučio numeriuose yra LCD televizoriai, mini barai ir darbo stalai.

Senamiesčio širdyje įsikūręs restoranas jau įrodė, kad jiems svarbiausia - klientas. Didžioji valgiaraštyje esančių patiekalų dalis yra ruošiami ant griliaus, o tai suteikia maistui savitą skonį. Profesionalūs virtuvės šefai ir aptarnaujantis personalas laukia visų, kurie vertina kokybę bei turi išskirtinį skonį."
        android:textSize="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/juoda"/>
    <View
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyriklis"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kontaktai"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tel. nr. +37062030003"
            android:textSize="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/juoda"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Adresas:  Laisvės g. 7, Mažeikiai 89222, Lithuania"
            android:textSize="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/juoda"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyriklis"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/telnr"
            android:layout_weight="1"
            android:id="@+id/telefono"
            android:background="?attr/selectableItemBackground"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/skyriklis"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/adresas"
            android:layout_weight="1"
            android:id="@+id/adreso"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>
    <View
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyriklis" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_alignParentTop="true" />
        <LinearLayout
            android:id="@+id/SliderDots"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/google"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="#ed5564"
            android:scaleType="fitCenter"
            android:src="@drawable/gsearch"
            android:foreground="?attr/selectableItemBackground"/>
    </FrameLayout>
</LinearLayout>
    </ScrollView>